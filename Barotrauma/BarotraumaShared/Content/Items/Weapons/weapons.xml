  <Item name="Flamer" identifier="flamer" category="Equipment" Tags="smallitem,weapon" cargocontaineridentifier="metalcrate" description="Flamethrower text. REPLACE ME!" Scale="0.32" impactsoundtag="impact_metal_light">
    <Price locationtype="City" buyprice="75" />
    <Price locationtype="Research" buyprice="75" />
    <Price locationtype="Military" buyprice="75" />
    <Price locationtype="Outpost" buyprice="75" />
    <Price locationtype="Mine" buyprice="75" />
    <!--<InventoryIcon texture="Content/Items/InventoryIconAtlas.png" sourcerect="64,64,64,64" />-->
    <InventoryIcon texture="Content/Items/Tools/tools_new.png" sourcerect="258,337,246,159" />
    <Sprite texture="Content/Items/Tools/tools_new.png" sourcerect="258,337,246,159" depth="0.55" origin="0.5,0.5" />
    <!-- the item takes 10 seconds to break down in a deconstructor and turns into steel and plastic -->
    <Deconstruct time="10">
      <Item identifier="steel" />
      <Item identifier="plastic" />
    </Deconstruct>
    <!-- physics body -->
    <Body width="215" height="119" density="40" />
    <!-- the character will hold the item 50 pixels in front of him, with his hands at the handle1 and handle2 positions -->
    <Holdable slots="Any,RightHand+LeftHand" controlpose="true" aimpos="50,0" handle1="-85,-35" handle2="0,-27" msg="ItemMsgPickUpSelect" />
    <RepairTool structurefixamount="0.0" usablein="Air" range="500" barrelpos="35,10" fireprobability="0.2" repairmultiple="true" repairthroughwalls="false" combatpriority="20">
      <!-- the item must contain a welding fuel tank for it to work -->
      <RequiredItems identifier="weldingfueltank,incendiumfueltank" type="Contained" msg="ItemMsgWeldingFuelRequired" />
      <ParticleEmitterHitCharacter particle="fleshsmoke" particlespersecond="3" anglemin="-5" anglemax="5" velocitymin="10" velocitymax="100" />
      <ParticleEmitter particle="flamethrower" particlespersecond="80" anglemin="0" anglemax="0" velocitymin="500" velocitymax="1000" highqualitycollisiondetection="true"/>
      <sound file="Content/Items/Tools/WeldingLoop.ogg" type="OnUse" range="500.0" loop="true" />
      <!-- bubbles when usage fails (e.g. in water) -->
      <StatusEffect type="OnFailure" target="UseTarget">
        <ParticleEmitter particle="bubbles" particlespersecond="20" anglemin="0" anglemax="360" velocitymin="50" velocitymax="100" />
        <ParticleEmitter particle="fleshsmoke" particlespersecond="5" anglemin="0" anglemax="360" scalemin="1" scalemax="1.5" velocitymin="50" velocitymax="100"/>
      </StatusEffect>
      <!-- make the item unusable when there's less than 10% oxygen -->
      <StatusEffect type="OnUse" target="Hull,This" UsableIn="None">
        <Conditional OxygenPercentage="lt 10"/>
      </StatusEffect>
      <!-- make the item usable again when there's more than 10% oxygen -->
      <StatusEffect type="OnFailure" target="Hull,This" UsableIn="Air">
        <Conditional OxygenPercentage="gt 10"/>
      </StatusEffect>
      <!-- when using, the contained welding fuel tank will detoriate (= lose fuel) -->
      <StatusEffect type="OnUse" target="Contained" targetidentifiers="weldingfueltank" Condition="-6.0" />
      <StatusEffect type="OnUse" target="Contained" targetidentifiers="incendiumfueltank" Condition="-2.5" />
      <!-- do burn damage to characters -->
      <StatusEffect type="OnUse" target="UseTarget">
        <Affliction identifier="burn" amount="1.25" />
      </StatusEffect>
      <!-- do minor burn damage to the user -->
      <StatusEffect type="OnUse" target="Character">
        <Affliction identifier="burn" amount="0.1" />
      </StatusEffect>
      <!-- consume oxygen from the hull -->
      <StatusEffect type="OnUse" target="Hull" Oxygen="-10000"/>
      <!-- weapons skill 20 required to use the item -->
      <RequiredSkill identifier="weapons" level="20" />
      <!-- if the skill requirement isn't met the welding fuel will be used 3 times as fast -->
      <StatusEffect type="OnFailure" target="Contained" targetidentifiers="weldingfueltank,oxygentank" Condition="-12.0" />
      <LightComponent LightColor="255,174,121,255" Flicker="0.5" Range="500">
        <sprite texture="Content/Items/Electricity/lightsprite.png" origin="0.5,0.5" />
      </LightComponent>
    </RepairTool>
    <!-- one welding fuel or oxygen tank can be contained inside the welding tool -->
    <ItemContainer capacity="1" hideitems="false" itempos="18,-32" containedspritedepth="0.56">
      <ContainedStateIndicator texture="Content/UI/ContainerIndicators.png" sourcerect="0,157,92,27" />
      <Containable identifiers="weldingfueltank,oxygentank,oxygenitetank,incendiumfueltank" />
    </ItemContainer>
  </Item>  

